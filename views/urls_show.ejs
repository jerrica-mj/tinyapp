<!-- Template to display a single URL and its shortened form -->
<!-- Receives URL data from ../express_server.js -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <title>URL - TinyApp Example</title>
</head>

<body>
  <!-- add partial template for header -->
  <%- include("partials/_header") %>

  <div class="card text-center">
    <div class="card-header"></div>
    <div class="card-body">

      <!-- Message to show if user is not logged in -->
      <% if (!user) { %>
        <div class="alert alert-warning mx-auto" role="alert" style="width: 65%;">
          <h4 class="alert-heading text-center">Uh Oh! Lost on Your Travels?</h4>
          <p class="text-center">Looks like this URL belongs to another user, so no peeking!</p>
          <hr>
          <p class="text-center">Only logged in users can see their URLs. <a href="/login" class="alert-link">Click here to login</a>.</p>
        </div>
      <% } else { %>

      <!-- Print/show data received from express_server.js -->
      <h5 class="card-title">TinyURL for: <%= longURL %></h5>
      <p class="card-text">Short URL: <a href="/u/<%= shortURL %>"><%= shortURL %></a></p>
    </div>

    <br>
    <div class="card-footer text-muted">
      <!-- Add an "update" form with button -->
      <!-- form tag: "action" says to which URL to submit the form, "method" tells which HTTP method to use when submitting -->
      <div style="margin: auto;">
        <h4 class="card-title">Edit</h4>
        <form class="form-inline" action="/urls/<%= shortURL %>" method="POST">
          <div class="form-group mb-2" style="margin: auto;">
            <label for="longURL">New URL:</label>
            <!-- input tag: "name" id's data we're sending on form submission -->
            <input class="form-control" type="text" name="longURL" placeholder="http://" style="width: 300px; margin: 1em">
            <!-- add a hidden field to pass the shortURL to server -->
            <input type="hidden" name="shortURL" value= <%= shortURL %> >
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </div>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>